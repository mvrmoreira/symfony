{% extends '::base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	<link href="{{ asset('bundles/wpensarerp/css/bootstrap.login.css') }}" rel="stylesheet">
{% endblock %}

{% block navbar %}{% endblock %}

{% block body %}

	{% if error %}
		<div class="alert alert-error">
			<button type="button" class="close" data-dismiss="alert">&times;</button>
			{{ error.message }}
		</div>
	{% endif %}

	<form action="{{ path('login_check') }}" method="post" class="form-signin">
		<h2 class="form-signin-heading">Please sign in</h2>

		<input type="text" class="input-block-level" id="username" name="_username" placeholder="Username" value="{{ last_username }}" />

		<input type="password" class="input-block-level" id="password" name="_password" placeholder="Password">

		<label class="checkbox">
		  <input type="checkbox" id="remember_me" name="_remember_me" checked>
		  <label for="remember_me">Keep me logged in</label>
		</label>

		<button class="btn btn-large btn-primary" type="submit">Sign in</button>

		{#
			If you want to control the URL the user is redirected to on success (more details below)
			<input type="hidden" name="_target_path" value="/account" />
		#}
	</form>

{% endblock %}