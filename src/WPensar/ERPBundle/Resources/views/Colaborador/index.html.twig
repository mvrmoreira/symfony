{% extends '::base.html.twig' %}

{% block title %}Colaboradores{% endblock %}

{% block body %}

{% for type, flashMessages in app.session.flashbag.all() %}
	{% for flashMessage in flashMessages %}
		<div class="alert alert-{{ type }}">
			<button type="button" class="close" data-dismiss="alert">&times;</button>
			{{ flashMessage }}
		</div>
	{% endfor %}
{% endfor %}

<h1>Colaboradores</h1>

<p>
	<a href="{{ url('wpensar_erp_colaborador_cadastrar') }}" class="btn btn-primary">Cadastrar</a>
</p>

<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th>Id</th>
			<th>Nome</th>
			<th>Situação</th>
		</tr>
	</thead>
	<tbody>
	{% for colaborador in colaboradores %}
		<tr>
			<td>{{ colaborador.getId() }}</td>
			<td>{{ colaborador.getNome() }}</td>
			<td>{{ colaborador.getSituacao() ? 'Ativo' : 'Inativo' }}</td>
			<td>
				<a href="{{ url('wpensar_erp_colaborador_editar', {id: colaborador.getId()}) }}" title="Editar"><i class="icon-edit"></i></a>
				<a href="{{ url('wpensar_erp_colaborador_excluir', {id: colaborador.getId()}) }}" title="Remover"><i class="icon-remove"></i></a>
			</td>
		</tr>
	{% endfor %}
	</tbody>
</table>

{% endblock %}